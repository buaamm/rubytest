
<h1>Listing Albums</h1>

<table style="width:1200px;overflow:visible;border:1px;">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.id %></td>
        <td><%= album.name %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album_path(album), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <% album.images.each do |i| %>
            <%#= image_tag i.picture.url(:small) %><%#= link_to '查看原图', i.picture.url(:original) %>
            <%= link_to image_tag(i.picture.url(:small)) + ' ', i.picture.url(:original) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path, class: "button blue" %>
