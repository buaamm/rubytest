<h1>Listing users</h1>

<%= link_to 'New user', new_user_path %>
<table>
    <tr>
        <th>ID</th>
        <th>Avatar</th>
        <th>Username</th>
        <th>Created At</th>
        <th colspan="3"></th>
    </tr>

    <% @users.each do |user| %>
        <tr>
            <td><%= user.id %></td>
            <td><%= image_tag user.avatar.url(:thumb) %></td>
            <td><%= user.username %></td>
            <td><%= user.created_at %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Destroy', user_path(user), method: :delete,
                data: { confirm: 'Are you sure?' } %>
            </td>
        </tr>
    <% end %>
</table>

  <p style="color: red"><%= flash[:req_ip] %></p>
